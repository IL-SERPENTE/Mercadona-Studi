{% extends 'base.html.twig' %}

{% block title %}Créer un produit{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Créer un nouveau produit</h1>
        </div>
    </div>

    <div class="container">
       <form method="post">
           <label for="new_product_libelle">Nom du produit : </label>
           {{ form_widget(form.libelle) }}
           <label for="new_product_description">Description : </label>
           {{ form_widget(form.description) }}
           <label for="new_product_prix">Prix du produit : </label>
           {{ form_widget(form.prix) }}
           <label for="new_product_image">Image du produit : </label>
           {{ form_widget(form.image) }}
           <label for="new_product_categorie">Catégorie du produit</label>
           {{ form_widget(form.categorie) }}
           <button class="btn btn-lg btn-primary" type="submit">Créer le produit</button>
       </form>
    </div>

{% endblock %}